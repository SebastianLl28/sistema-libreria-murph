extends ../templates/head-basic

block styles
  link(rel="stylesheet", href="/css/dist/login.css")

block content
  main.main
    section.section
      form.form(method="POST")
        h1.form__title Murph
        div.form__inputs
          div.form__container
            label.form__label(for="email") Correo
            input.form__input#email(type="text", name="email", placeholder="Ingresa tu correo" value= user ? user.email : "")
            span.form__decoration
          div.form__container
            label.form__label(for="password") Contraseña
            input.form__input#password(type="password", name="password", placeholder="Ingrese su contraseña" )
            span.form__decoration
          div.form__links
            a.form__link(href="./register") Registrarse
            a.form__link(href="./recover-password") Recuperar contraseña
            input.form__submit(type="submit", value="Login")
      picture.picture
        img.picture__img(src="/img/auth/logo.png", alt="murph" id="logo")
block scripts
  script(src="/js/auth/auth.js") 